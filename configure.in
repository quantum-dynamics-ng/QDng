AC_INIT(configure.in)

AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(QDng, 0.1)


AC_LANG_CPLUSPLUS
AC_PROG_CXX
AC_PROG_F77

AM_PROG_LIBTOOL

dnl libxml2
sinclude([acx_libxml2.m4])
ACX_CHECK_LIBXML2

dnl fftw3
AC_CHECK_HEADER(fftw3.h,,AC_MSG_ERROR(fftw3 headers are missing))
AC_CHECK_LIB(fftw3, fftw_plan_dft,,AC_MSG_ERROR(fftw3 libs are missing))

dnl blas/lapack
sinclude([acx_blas.m4])
sinclude([acx_lapack.m4])
ACX_BLAS(,AC_MSG_ERROR(BLAS libs are missing/not working))
ACX_LAPACK(,AC_MSG_ERROR(LAPACK is missing))

dnl Configure C/F77 mixed mode (RT libs)
AC_F77_LIBRARY_LDFLAGS

dnl AC_ARG_ENABLE([mpi],
dnl	    [AS_HELP_STRING([--enable-mpi],[Build with support for mpi parallization])],
dnl	    [],enable_mpi=no)

dnl AC_ARG_WITH([mpi-prefix],
dnl	    [AS_HELP_STRING([--with-mpi-prefix=PATH],[Prefix of the mpi installation])],
dnl	    [],with_mpi-prefix=no)


AC_OUTPUT(Makefile src/Makefile src/qdlib/Makefile src/tools/Makefile src/fft/Makefile src/math/Makefile src/modules/Makefile src/tests/Makefile src/slatec/Makefile)
